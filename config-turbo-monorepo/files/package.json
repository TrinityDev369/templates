{
  "name": "@myorg/monorepo",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@9.0.0",

  "scripts": {
    "dev":       "turbo run dev",
    "build":     "turbo run build",
    "lint":      "turbo run lint",
    "test":      "turbo run test",
    "typecheck": "turbo run typecheck",
    "format":    "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,css}\"",
    "clean":     "turbo run clean && rm -rf node_modules"
  },

  "devDependencies": {
    "turbo": ">=2.0.0",
    "prettier": "^3.2.0"
  }
}
